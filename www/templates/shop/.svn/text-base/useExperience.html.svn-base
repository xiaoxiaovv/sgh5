<!--评价-->
<ion-view view-title="产品使用心得" hide-nav-bar="true">
  <div style="height:44px;background:#fafafa;" flex="box:justify" ng-style="paddingtopClass">
    <div style="width:34px;height:44px;padding-left:16px;" flex="main:center cross:center">
      <div style="height:24px;width:24px;">
      </div>
    </div>
    <div style="height:44px;font-size: 17px;letter-spacing: -0.41px;text-align:center;line-height:44px;">产品使用心得</div>
    <div style="width:34px;height:44px;padding-right:16px;" flex="main:center cross:center"></div>
  </div>
  <ion-content scrollbar-y="false" ng-style="paddingtopClasscontent" class="useExperience bg-background">
    <div ng-show='isCanComment=="normal"'>
      <div class="topDiv" flex="dir:left main:center cross:center box:first">
        <img ng-src={{productObj.productImg}}>
        <span>{{productObj.productName}}</span>
      </div>
      <div class="contentDiv">
            <textarea class="width-100 bg-background " rows="5" maxlength="500" style="resize: none;position:relative;" ng-model="commentObj.commentTt" placeholder="您可以写下您的购物体验，供其他小伙伴参考哦！" ></textarea>
            <span ng-if="commentObj.commentTt.length<=0">500字</span>
            <span ng-if="commentObj.commentTt.length>0">{{commentObj.commentTt.length}}/500</span>
      </div>
      <div class="picDiv" flex="dir:left cross:center">
        <div flex="dir:top main:center cross:center" ng-repeat="imgPL in imageList track by $index" ng-click="removeImage($index)">
          <img ng-src={{imgPL}} />
        </div>
        <div class="picDivOne">
          <div class="imageFrame">
            <input class="imageFrame1" id="file" type="file" accept="image/*" />
          </div>
          <div flex="dir:top main:center cross:center" class="picDivOneL">
            <img class="picDivOneimg" ng-src="{{imgBaseURL}}img/fd-camera.png"/>
            <span ng-if="imageCount<=0">添加</span>
            <span ng-if="imageCount>0">{{imageCount}}/5</span>
          </div>
        </div>
      </div>
      <div class="shopScore">
        <div class="shopScoreOne">综合评分</div>
        <div class="shopScoreAll" flex="dir:left cross:center">
          <span>商品评分</span>
          <comment-bar-new comment-value="valueAll.value1" comment-change="change(0);"></comment-bar-new>
        </div>
        <div class="shopScoreAll" flex="dir:left cross:center">
          <span>物流配送</span>
          <comment-bar-new comment-value="valueAll.value2" comment-change="change(1);"></comment-bar-new>
        </div>
        <div class="shopScoreAll" flex="dir:left cross:center">
          <span>服务态度</span>
          <comment-bar-new comment-value="valueAll.value3" comment-change="change(2);"></comment-bar-new>
        </div>
      </div>
      <div class="buyerImpression" ng-if="impressionStr.length>0">
        <div class="impressionText">买家印象</div>
        <div class="impressionList" flex="dir:left">
          <div ng-repeat = "ims in impressionStr" ng-click = "buyerIms($index)" ng-style='isChecked($index)?isCheckedCss:""'>{{ims.impressionName}}</div>
        </div>
      </div>
      <div class="byuerCount">
        <div class="byuerCountOne">
          <input type="text" name="name" placeholder="收货人手机号" ng-model="userInfo.mobile">
        </div>
        <div class="byuerCountTwo" flex="dir:left box:last main:center cross:center">
          <input type="text" name="name" placeholder="图形验证码" ng-model="userInfo.captcha">
          <img ng-click="setImgCaptchaForPhone();" ng-src={{identifyCodeImg}} alt="点击刷新" ng-click="setImgCaptchaForPhone()">
        </div>
        <div class="byuerCountThe" flex="dir:left box:last main:center cross:center">
          <input type="text" name="name" placeholder="短信验证码" ng-model="userInfo.verificationCode">
          <span ng-click="getVCode()">{{VCodeTips}}</span>
        </div>
      </div>
      <div class="divBottom" flex="main:center cross:center">
        <div class="submitButton" ng-click="submitEvaluation()">发表评价</div>
      </div>
    </div>
    <div class="overTimeDiv" ng-if='isCanComment=="expire"'>
      <img ng-src="{{imgBaseURL}}img/overtime.png">
      <span>对不起，已经超过评论时间，不能评论</span>
    </div>
    <div class="overTimeDiv" ng-if='isCanComment=="finish"'>
      <img ng-src="{{imgBaseURL}}img/overtime.png">
      <span>对不起，已经评论完成，不能再次评论</span>
    </div>
  </ion-content>
</ion-view>
