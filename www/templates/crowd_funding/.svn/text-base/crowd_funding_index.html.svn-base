<!--顺逛众筹 首页 -->
<ion-view  class="background"  view-title="顺逛众筹">
  <div ng-class="{true:'iosTopcss',false:'androidTopcss'}[isIos]" class="mess-tip" style="display:none;color:#fff;text-align:center;width:70%;height:35px;line-height:35px;background:#000;opacity:0.9;position:absolute;left:8px;z-index:99;border-radius:5px;font-size:12px;"></div>
  <!--头部右侧点击信息-->
  <ion-nav-buttons side="right">
    <div style='height:24px;width:24px;margin-top:5px;margin-right:3px;' ui-sref="ClassifyMessageCenter">
      <img style="height:24px;width:24px;width:100%;height:100%;" ng-src="{{imgBaseURL}}img/Message@2x.png" alt="消息中心" />
      <span ng-class="{true:'tab-red-point',false:''}[flagNum]"></span>
    </div>
  </ion-nav-buttons>

  <!--内容区域-->
  <ion-content  scrollbar-y="false" delegate-handle="scrollSelection">
    <div class="scroll-view" style="position: relative;width: 100%;height: 100%;">
        <!--中心图-->
        <div class="crowd_funding_index_banner">
          <img src="{{imgBaseURL}}img/zc@2x.png" alt="商城">
        </div>
        <div class="crowd_funding_index_btn" ui-sref="CrowdFunding">
           去首页逛逛吧
        </div>
    </div>
  </ion-content>

</ion-view>
