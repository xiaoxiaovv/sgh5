<ion-view view-title="对话纪录" hide-nav-bar="true">
    <ion-header-bar align-title="center" style="top:0;" class="border-bottom">
        <button class="color-text-l button-clear" ng-click="goBack()">
            <i class="icon ion-ios-arrow-left"></i>
        </button>
        <div class="title">{{originData.from}}的聊天记录</div>
        <!--右上角圆点-->
    </ion-header-bar>
    <ion-content>
        <div class="list">
            <div class="item" style="padding: 5px !important;" ng-repeat="item in members">
                <div class="row">
                    <div class="col col-25 position-r" style="padding-left: 0">
                        <img  ng-src="{{item.avatarImageFileid}}" style="width: 42px;height: 42px;border-radius: 4px;"/>
                        <div ng-if="false" class="sg-jinyan" style="top:-12px;display: inline-block;position: absolute;text-align: center;height: 42px;width: 42px;background-color:#000;opacity: 0.5;border-radius: 4px;z-index:50;" ng-style="jinyanHover">
                            <img ng-src="{{imgBaseURL}}img/quanzi/jinyan.png" style="width: 100%;height: 100%;">
                        </div>
                        <span style="text-align: center;left: 30px;top: 18px;right: auto;" ng-if="false" class="sg-discuss-setting-zhu">主</span>
                    </div>
                    <div class="col " style="position: relative;left: -15px;top: -5px;">
                        <div class="share-list-page-userName" style="font-size: 13px;">{{item.groupMsgUserName}}</div>
                        <div style="width:80%;padding: 5px;" ng-if="!item.fileType">
                           <div style="overflow: auto;white-space: normal;text-overflow: clip;font-size: 12px;" ng-bind-html="item.groupMsg"></div>
                        </div>
                        <div style="width:90%" ng-if="item.fileType=='.jpg'">
                            <img  ng-src="{{item.imageUrl}}" style="width: 50%;"/>
                        </div>
                        <div style="width:90%" ng-if="item.fileType=='.wav'">
                            <play-sound class="play-sound-in-share" url="{{item.imageUrl}}" is-new="true" side="left"></play-sound>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </ion-content>

</ion-view>
