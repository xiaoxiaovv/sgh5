<ion-view view-title="社区消息">
    <ion-content class="bg-background">
        <div class="bg-white margin-top-5">
            <!--评论样式 -->

            <div class=" border-bottom padding" style="height: 60px">
                <div class="float-l position-r width-height-40" style="">
                    <div class="position-a"
                         style="height: 9px;width: 9px;background: #f74c4b;border-radius: 50%; border: 1px solid white;right: -4px;top: -4px"></div>
                    <img ng-src="{{imgBaseURL}}img/share_default.png" alt="" style="height: 40px;width: 40px" class="border-radius">
                </div>
                <div class="float-r white-space-normal overflow-hidden"
                     style="width: 110px;height: 40px;font-size: 12px; text-overflow:ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;">
                    <span style="color: #999">
                        Ta评论了我:
                    </span>
                    <span>
                        快来买东西呀,再不买就降价了
                    </span>
                </div>
                <div class="width-100 height-100" style="padding-left: 50px;padding-right: 110px">
                    <div style="font-size: 14px; text-overflow:ellipsis;"
                         class="font-bold white-space-nowrap overflow-hidden">时光&无垠
                    </div>
                    <div style="font-size: 12px;color: #999; text-overflow:ellipsis"
                         class="white-space-nowrap overflow-hidden">
                        <span>2分钟前</span>
                        <span class="padding-left">来自顺光官方</span>
                    </div>
                </div>
            </div>
            <!--关注样式-->
            <div class=" border-bottom padding" style="height: 60px">
                <div class="float-l position-r" style="width: 40px;height: 40px">
                    <div class="position-a"
                         style="height: 9px;width: 9px;background: #f74c4b;border-radius: 50%; border: 1px solid white;right: -4px;top: -4px"></div>
                    <img ng-src="{{imgBaseURL}}img/share_default.png" alt="" style="height: 40px;width: 40px" class="border-radius">
                </div>
                <div class="float-r padding-top-10"
                     style="width: 110px;height: 40px;font-size: 12px;padding-left: 45px">
                    <div style="width: 60px;height: 20px;line-height:20px;border: 1px solid #0178fa;font-size: 13px;color: #0178fa" class="text-align-c border-radius">+&nbsp关注</div>
                </div>
                <div class="width-100 height-100" style="padding-left: 50px;padding-right: 110px">
                    <div style="font-size: 14px; text-overflow:ellipsis;"
                         class="font-bold white-space-nowrap overflow-hidden">真难看
                    </div>
                    <div style="font-size: 12px;color: #999; text-overflow:ellipsis"
                         class="white-space-nowrap overflow-hidden">
                        <span>2分钟前</span>
                        <span class="padding-left">来自顺光官方</span>
                    </div>
                </div>
            </div>
            <!--点赞样式-->
            <div class=" border-bottom padding" style="height: 60px">
                <div class="float-l position-r" style="width: 40px;height: 40px">
                    <div class="position-a"
                         style="height: 9px;width: 9px;background: #f74c4b;border-radius: 50%; border: 1px solid white;right: -4px;top: -4px"></div>
                    <img ng-src="{{imgBaseURL}}img/share_default.png" alt="" style="height: 40px;width: 40px" class="border-radius">
                </div>
                <div class="float-r"
                     style="width: 110px;height: 40px;font-size: 12px;padding-left: 58px;color: #999">
                    <div style="padding-left: 7px">
                        <img ng-src="{{imgBaseURL}}img/circleIcon/praise_gray.png" alt="" style="width: 22px;height: 22px;line-height: 22px">
                    </div>
                    <div style="margin-top: -8px">
                        赞了你
                    </div>
                </div>
                <div class="width-100 height-100" style="padding-left: 50px;padding-right: 110px">
                    <div style="font-size: 14px; text-overflow:ellipsis;"
                         class="font-bold white-space-nowrap overflow-hidden">真难看
                    </div>
                    <div style="font-size: 12px;color: #999; text-overflow:ellipsis"
                         class="white-space-nowrap overflow-hidden">
                        <span>2分钟前</span>
                        <span class="padding-left">来自顺光官方</span>
                    </div>
                </div>
            </div>
        </div>


    </ion-content>
</ion-view>